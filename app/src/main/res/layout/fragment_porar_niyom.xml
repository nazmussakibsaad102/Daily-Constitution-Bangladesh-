<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#FFFFFF">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/porarniyom_title"
            android:textAlignment="center"
            android:textStyle="bold"
            android:longClickable="true"
            android:textIsSelectable="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:elevation="8dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:background="@drawable/box_shadow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/porarniyom__ek"
            android:longClickable="true"
            android:textIsSelectable="true"
            android:layout_marginBottom="20dp"
            android:elevation="8dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:background="@drawable/box_shadow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="পরিভাষাসমূহের ব্যাখ্যা উদাহরণসহ"
            android:textAlignment="center"
            android:textStyle="bold"
            android:longClickable="true"
            android:textIsSelectable="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:elevation="8dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:background="@drawable/box_shadow"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/porarniyom__dui"
            android:longClickable="true"
            android:textIsSelectable="true"
            android:layout_marginBottom="20dp"
            android:elevation="8dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:background="@drawable/box_shadow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/porarniyom__tin"
            android:longClickable="true"
            android:textIsSelectable="true"
            android:layout_marginBottom="20dp"
            android:elevation="8dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:background="@drawable/box_shadow"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/porarniyom__char"
            android:longClickable="true"
            android:textIsSelectable="true"
            android:layout_marginBottom="100dp"
            android:elevation="8dp"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:background="@drawable/box_shadow"/>




    </LinearLayout>
</ScrollView>

