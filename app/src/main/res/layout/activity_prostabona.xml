<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/background_common"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:longClickable="true"
            android:textIsSelectable="true">


            <TextView
                android:id="@+id/prostabona1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/prostabona_1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:longClickable="true"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/prostabona2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/prostabona_2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:longClickable="true"
                android:textIsSelectable="true"/>
            <TextView
                android:id="@+id/prostabona3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/prostabona3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:longClickable="true"
                android:textIsSelectable="true"/>

            <TextView
                android:id="@+id/prostabona4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/prostabona_4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:longClickable="true"
                android:textIsSelectable="true"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
